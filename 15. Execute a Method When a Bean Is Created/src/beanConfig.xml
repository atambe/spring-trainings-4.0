<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="department" class="com.cg.demo.Department">
		<constructor-arg>
		<value>TDI Java</value>
		</constructor-arg>
	</bean>
	<bean id="employeeWithoutDepartment" class="com.cg.demo.Employee" init-method="init">
		<property name="name">
			<value>Sagar</value>
		</property>
	</bean>
	<bean id="employeeWithoutName" class="com.cg.demo.Employee" init-method="init" lazy-init="true"></bean>
	<bean id="employeeWithAllPropertiesSet" class="com.cg.demo.Employee" init-method="init">
		<property name="name">
			<value>Renu</value>
		</property>
		<property name="department">
			<ref bean="department"/>
		</property>
	</bean>
</beans>
